<h1>Eat-Da-Burger!</h1>

<h2>Burgers that have not been devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <p><strong>{{burger_name}}</strong></p>
    <hr>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <p><strong>{{burger_name}}</strong></p>
    <hr>
    {{/if}}
    {{/each}}
</ul>

<hr />

<h2>Add a Burger</h2>
<form class="create-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="burgerName">Burger Name:</label>
    <input type="text" id="burgerName" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>